@model LEGO_Dimensions.Models.Personnage

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Personnage</legend>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Nom)
            </div>
            <div class="editor-field focus">
                @Html.EditorFor(model => model.Nom)
                @Html.ValidationMessageFor(model => model.Nom)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Univers)
                <div class="editor-field">                   
                    @{
                        using (LEGO_Dimensions.Models.IDal dal = new LEGO_Dimensions.Models.Dal())
                        {
                            @Html.DropDownListFor(model => model.UniversId, new SelectList(dal.ObtientTousLesUnivers(), "UniversId", "Nom"), "-- Choisir un univers --")
                        }
                    }
                    @Html.ValidationMessageFor(model => model.Univers)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Pouvoirs)
                <div class="editor-field">
                    @{
                        using (LEGO_Dimensions.Models.IDal dal = new LEGO_Dimensions.Models.Dal())
                        {
                            @Html.DropDownListFor(model => model.UniversId, new SelectList(dal.ObtientTousLesPouvoirs(), "PouvoirId", "Nom"), "-- Choisir des pouvoirs --")
                        }
                    }
                    @Html.ValidationMessageFor(model => model.Pouvoirs)
                </div>
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>